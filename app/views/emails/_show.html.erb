 <%if @emails.count > 0%>
  <main class="message">
    <div class="details" id="test">
      <div class="title"><%=@email.object%></div>
      <div class="header">
        <img class="avatar" src="https://bootdey.com/img/Content/avatar/avatar1.png">
        <div class="from">
          <span>Chris</span>
          chris@yopmail.com
        </div>
        <div class="date">Today, <b>3:47 PM</b></div>
      </div>
      <div class="content">
        <p>
          <%=@email.body%>
        </p>
      </div>
    </div>
    <div class="form-group" style="width: 200px; display: inline-flex; justify-content: center; align-items: center">
      <%= link_to "Supprimer", email_path(@email.id), class: "btn btn-danger btn-block", method: :delete, remote: true %>
      <%= button_to "Non lus",@email, class: "btn btn-secondary btn-block", method: :put, remote: true%>
    </div>
  </form>
</div>
</main>
<%end%>
