<main class="message" id="test-<%= @email.id%>">
  <div class="details">
    <div class="title"><%= @email.object%></div>
    <div class="header">
      <img class="avatar" src="https://bootdey.com/img/Content/avatar/avatar1.png">
      <div class="from">
        <span>Flo</span>
        florian@apple.com
      </div>
      <div class="date">Today, <b>3:47 PM</b></div>
    </div>
    <div class="content">
      <p>
        <%=@email.body %>
      </p>
    </div>
    <div style="width: 200px">
      <%= link_to email_path(@email.id), method: :delete, class: "btn btn-danger btn-block", remote: true do%>
        <span> Supprimer
        </span>
      <% end %>
      <br>
      <%= button_to "Non lu", @email, method: :put, class: "btn btn-warning btn-block", remote: true%>
    </div>
  </div>
  <form method="post" action="">
    <div class="form-group">
      <textarea class="form-control" id="message" name="body" rows="12" placeholder="Click here to reply"></textarea>
    </div>
    <div class="form-group">
      <button tabindex="3" type="submit" class="btn btn-warning">Send message</button>
    </div>
  </form>
</div>
</main>
